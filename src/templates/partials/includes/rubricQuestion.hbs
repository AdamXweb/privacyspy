<div class="flex text-gray-800 cursor-pointer text-md" onclick="toggleRubricSelection('{{selection.question.slug}}')">
    <div class="flex-shrink">
        <i class="fas fa-chevron-down" id="chevron-{{selection.question.slug}}"></i>
    </div>
    <div class="flex-shrink mx-6">
        <i class="fas fa-circle {{ratioColorClass (divide selection.option.percent 100)}}"></i>
    </div>
    <div class="flex-grow">
        <span>{{selection.question.text}}&nbsp;</span>
        <span class="text-gray-300">{{selection.option.text}}</span>
    </div>
    <div class="flex-shrink-0 pl-4 text-right">
        <span>{{round (multiply (divide selection.option.percent 100) selection.question.points)}}</span><span
            class="text-gray-300">/{{selection.question.points}}</span>
    </div>
</div>
<div id="selection-{{selection.question.slug}}"
    class="hidden h-auto p-4 mt-3 border border-gray-100 rounded">
    {{#if selection.question.notes}}
    <div class="content text-xs text-gray-600 mx-2 mb-4">
        {{#each selection.question.notes as |note|}}
        {{#markdown}}{{note}}{{/markdown}}
        {{/each}}
    </div>
    {{/if}}
    <div class="md:flex">
        <div class="md:w-6/12">
            <p class="font-semibold mb-2 pl-2">Score</p>
            {{#each (sortBy selection.question.options "percent") as |option|}}
            <div class="flex text-sm rounded px-2 py-1 {{#if (eq option.id ../selection.option.id)}}bg-gray-100{{/if}}">
                <div class="w-5/6">
                    {{option.text}}

                    {{#if (eq option.id ../selection.option.id)}}
                    {{! for screen readers }}
                    <span class="hidden text-gray-400">(selected)</span>
                    {{/if}}

                    {{#if option.description}}
                    {{> includes/info option.description}}
                    {{/if}}
                </div>
                <div class="w-1/6 ml-4 font-medium text-right">
                    {{option.percent}}%
                </div>
            </div>
            {{/each}}
        </div>
        <div class="md:w-6/12 md:ml-8">
            {{#if selection.citations}}
            <p class="font-semibold mb-2">Citation</p>
            <div class="content max-w-full text-sm mb-4 text-gray-600">
                {{#each selection.citations as |citation|}}
                {{#markdown}}{{citation}}{{/markdown}}
                {{/each}}
            </div>
            {{/if}}
            {{#if selection.notes}}
            <p class="font-semibold mb-2">Notes</p>
            <div class="content max-w-full text-sm mb-4 text-gray-600">
                {{#each selection.notes as |note|}}
                {{#markdown}}{{note}}{{/markdown}}
                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>
</div>