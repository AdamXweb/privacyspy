{{#> layouts/base title="Rating, annotating, and archiving privacy policies" }}

{{#*inline "precontent"}}
<div class="absolute top-0 left-0 right-0 w-full h-full overflow-hidden">
  <img class="top-0 left-0 right-0 w-full h-full overflow-hidden select-none object-fit"
    src="./static/img/header-cloud.svg" />
</div>
{{/inline}}
{{#*inline "content"}}
<main class="w-full pt-8 pb-4 mx-auto md:w-3/4 sm:px-8 md:px-6 lg:px-4 md:py-6">
  <div class="flex flex-col-reverse items-center justify-between mb-24 md:flex-row md:mt-24">
    <section class="flex flex-col w-full py-4 mt-6 mb-12 md:w-2/3">
      <div class="text-center rounded-md md:text-left">
        <h1 class="mt-6 mb-5 text-5xl font-extrabold leading-none text-gray-700 md:mt-0 md:text-6xl">
          We track privacy.
        </h1>
      </div>
      <h2
        class="self-center w-5/6 mt-2 mb-6 text-lg font-medium text-center text-gray-600 md:self-start md:mt-0 md:text-left">
        PrivacySpy is an open project to
        <span class="font-bold text-gray-700">rate</span>,
        <span class="font-bold text-gray-700">annotate</span>, and
        <span class="font-bold text-gray-700">archive</span>
        privacy policies. <a href="about" class="font-medium text-pink-600 underline hover:text-pink-700">Here's
          why that
          matters</a>.
      </h2>
      <ul class="flex flex-col items-center mt-2 text-xl font-medium md:flex-row md:mt-1 md:justify-start">
        <li class="button ~info bg-blue-500 !high active">
          <a href="/directory" tabindex="0">Explore the Directory</a>
        </li>
        <li class="ml-2 button ~info text-blue-500 !low active mt-2 md:mt-0">
          <span onclick="installBrowserExtension()" tabindex="1">Install the Extension</span>
        </li>
      </ul>
    </section>
    <section class="flex justify-center md:justify-end md:w-4/12 md:h-96"></section>
  </div>
</main>
{{/inline}}
{{/layouts/base}}